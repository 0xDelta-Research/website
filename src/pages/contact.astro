---
import '../styles/global.css';
import Header from '../components/Header.jsx';
import Footer from '../components/Footer.jsx';
import SecureContact from '../components/SecureContact.jsx';
---

<html lang="pt-br">
  <head>
    <title>Contact | 0xD3lta</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/delta-favicon.png" />
  </head>
  
  <body class="min-h-screen bg-[#050505] text-neutral-400 font-mono flex flex-col">
    
    <Header client:load />

    <main class="flex-grow flex items-center justify-center py-20 relative">
        
        {/* Background Grid Sutil */}
        <div class="absolute inset-0 pointer-events-none opacity-[0.02] bg-[url('https://grainy-gradients.vercel.app/noise.svg')]"></div>
        
        <div class="container mx-auto px-4">
            
            {/* Cabeçalho da Página */}
            <div class="text-center mb-16">
                <p class="text-xs font-bold text-neutral-600 mb-4 tracking-[0.2em] uppercase">
                    // Communication_Channels
                </p>
                <h1 class="text-4xl md:text-5xl font-bold text-white tracking-tighter uppercase">
                    Establish Connection
                </h1>
            </div>

            {/* O Componente Seguro */}
            <SecureContact client:load />
            
        </div>
    </main>

    <Footer client:visible />
  </body>
</html>